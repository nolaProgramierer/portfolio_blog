<div class="container">
<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div class="error-explanation">
      <h2><%= pluralize(@article.errors.count, "error") %>
        has prevented this page from being saved:
      </h2>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
    <% end %>

      <div class = "row">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "col-md-3 col-md-3 offset"%>
      </div>
      <div class = "row">
        <%= f.label :body %><br>
        <%= f.text_area :body, class: "col-md-9 col-md-3-offset", id: "article-body-field" %>
      </div>
      <div>
      <%= f.submit "Submit Article", class: "btn btn-primary" %>
      </div>
    <% end %>
</div>
