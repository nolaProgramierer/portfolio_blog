<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div class="error-explanation">
      <h2><%= pluralize(@article.errors.count, "error") %>
        has prevented this page from being saved:
      </h2>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
    <% end %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :body %>
    <%= f.text_area :body %>

    <%= f.submit %>
  <% end %>
